@model WebGitNet.Models.LogEntry
<div class="log-entry">
    <div class="commit-message">
        @Model.Message
    </div>
    <div class="commit-author">
        @Html.Gravatar(Model.AuthorEmail, Model.Author, 24)
        <a href="mailto:@Model.AuthorEmail">@Model.Author</a>
    </div>
@if (Model.Author != Model.Committer ||
     Model.AuthorEmail != Model.CommitterEmail)
{
    <div class="commit-committer">
        @Html.Gravatar(Model.CommitterEmail, Model.Committer, 24)
        <a href="mailto:@Model.CommitterEmail">@Model.Committer</a>
    </div>
}
    <div class="commit-ref">
        <span>commit:</span> @Html.ActionLink(Model.Commit, "ViewCommit")
    </div>
    <div class="tree-ref">
        <span>tree:</span> @Html.ActionLink(Model.Tree, "ViewTree")
    </div>
@foreach (var parent in Model.Parent.Split(' '))
{
    <div class="tree-ref">
        <span>parent:</span> @Html.ActionLink(parent, "ViewTree")
    </div>
}
</div>